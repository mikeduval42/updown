<div class="container" id="newuser">
  <section id="signup">
    <h1>Sign up for free account!</h1>
      <div id= "signupform">
        <%= form_for @user do |f| %>
        	<%= f.text_field :user_name, placeholder: "Username"%>
        	<%= f.text_field :name, placeholder: "Name"%>
        	<%= f.text_field :email, placeholder: "Email"%>
        	<%= f.text_field :password, placeholder: "Password"%>
        	<%= f.text_field :password_confirmation, placeholder: "Password confirmation" %>
        	<%= f.submit 'Done'%>
        <%end%>
    </div>
  </section>
</div>